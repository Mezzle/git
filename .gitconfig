[user]
    name = Martin Meredith
    email = martin@sourceguru.net
[github]
    user = Mezzle
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[alias]
    d = difftool
    br = branch
    cb = checkout -b
    ci = commit
    co = checkout
    last = log -1 HEAD
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    log1 = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    pf = pull --ff-only
    ff = pull --ff-only
    pu = pull
    st = status
    smu = submodule update
    smur = submodule update --recursive
    wtf = !git-wtf
    get-branch = !git branch | grep '*' | cut -b 3-
    cleanup = !git sweep cleanup --master=integration --skip=master
[push]
    default = simple
[include]
    path = ~/.gitconfig.local
[core]
    excludesfile = ~/.gitignore_global
