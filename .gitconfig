[user]
    name = Martin Meredith
    email = martin@sourceguru.net
[github]
    user = Mezzle
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[alias]
    d = difftool
    br = branch
    cb = checkout -b
    ci = commit
    co = checkout
    last = log -1 HEAD
    log1 = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ff = pull --ff-only
    st = status
    get-branch = !git branch | grep '*' | cut -b 3-
    cleanup = !git sweep cleanup --skip=release/moneysupermarket
    subtrees = !"git log | grep git-subtree-dir | awk '{ print $2 }' | sort | uniq"
    dlt = !"git fetch --tags && git log1 $(git describe --abbrev=0)..master"
[push]
    default = simple
[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input
[rerere]
	enabled = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[include]
    path = ~/.gitconfig.local
